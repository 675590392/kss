<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ej_back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:text="今日人员铺位安排"
            android:textSize="40dip"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主管教:"
            android:textSize="30dip"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_weight="1"

            />
        <TextView
            android:id="@+id/txt_zgj_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="30dip"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协管教:"
            android:textSize="30dip"
            android:textColor="#000000"
            android:gravity="right"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/txt_xgj_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textSize="30dip"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_below="@+id/pw"
        android:id="@+id/view_pw_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/cwzk_x"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_below="@+id/view_pw_line"
        android:id="@+id/view_pw"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cbd0d4"/>
    <LinearLayout
        android:id="@+id/lin_pw_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/view_pw"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/bisque"
        >
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >

        </LinearLayout>
        <TextView
            android:id="@+id/text_peo_num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="人员编号"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#163758"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >
        </LinearLayout>
        <TextView
            android:id="@+id/text_peo_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#163758"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >
        </LinearLayout>
        <TextView
            android:id="@+id/text_peo_pwh"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="铺位号"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#163758"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >
        </LinearLayout>
        <TextView
            android:id="@+id/text_peo_yj"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="眼镜"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#163758"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >
        </LinearLayout>
        <TextView
            android:id="@+id/text_peo_dz"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="凳子"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#163758"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >
        </LinearLayout>
       <!-- <TextView
            android:id="@+id/text_duty_content"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="值日内容"
            android:textSize="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#163758"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#cbd0d4" >
        </LinearLayout>-->
    </LinearLayout>
    <ImageView
        android:id="@+id/img_line"
        android:layout_below="@+id/lin_pw_title"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"/>

    <LinearLayout
        android:id="@+id/lin_pw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_line"
        android:background="#dfe8f3"
        >
        <ListView
            android:id="@+id/listview_pw"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#cbd0d4"
            android:dividerHeight="1dip"
            android:layout_marginBottom="50dp"
            >
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_image" >

        <ImageView
            android:id="@+id/home_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_style" />

        <ImageView
            android:id="@+id/return_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/return_style" />
    </RelativeLayout>
</RelativeLayout>
