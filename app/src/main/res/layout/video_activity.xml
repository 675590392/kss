<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ej_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical" >
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#3680cd">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="主页   > 本地视频"
	            android:textColor="#ffffff"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:textSize="22sp" />
	         <ImageView
	            android:layout_width="30dip"
	            android:layout_height="30dip"
	            android:layout_marginRight="20dp"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:id="@+id/qhds"
	            android:background="@drawable/ds" />
		</RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/spdb_bj"
            android:orientation="horizontal" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rGroup"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/sp_cj"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="推荐"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/divider" />

                <RadioButton
                    android:id="@+id/sp_jy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="教育"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/divider" />

                <RadioButton
                    android:id="@+id/sp_xx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="学习"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/divider" />

                <RadioButton
                    android:id="@+id/sp_yl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="娱乐"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/divider" />

                <RadioButton
                    android:id="@+id/sp_dy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="电影"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/divider" />

                <RadioButton
                    android:id="@+id/sp_zh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="综合"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/divider" />

                <RadioButton
                    android:id="@+id/sp_qb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/spdb_but_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全部"
                    android:textSize="22sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:padding="20dp" >
        <View 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"/>
        <GridView
            android:id="@+id/spdb_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:horizontalSpacing="80dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            android:verticalSpacing="20dp" >
        </GridView>
        <View 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_image" >

        <ImageView
            android:id="@+id/home_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_style" />

        <ImageView
            android:id="@+id/return_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/return_style" />
    </RelativeLayout>

</LinearLayout>