<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ej_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#3680cd"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="主页   > 个人消费"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal" >

          <!--<ImageView
            android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:background="@drawable/index_login_b"
        	android:id="@+id/zwdl"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dip"
            android:orientation="vertical" >

            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="30dip"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
				
                <TextView
					android:id="@+id/text_consum_name"
                    android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:textColor="#000"
	            	android:textSize="22dip"
	            	android:text="姓名:"/>
                <TextView
					android:id="@+id/text_consum_num"
                    android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="20dip"
	            	android:textColor="#000"
	            	android:textSize="22dip"
	            	android:text="编号:"/>
	            
	        </LinearLayout>
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dip"
	            android:orientation="vertical" >
	            <ImageView
	                android:layout_width="fill_parent"
	            	android:layout_height="5dip"
	            	android:layout_alignParentBottom="true"
	            	android:background="@drawable/cwzk_x"/>
	        </RelativeLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_marginTop="20dip"
	            android:orientation="horizontal" >
				
		         <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="fill_parent"
		            android:layout_weight="1"
		            android:layout_marginLeft="10dip"
		            android:background="#dfe8f3"
		            android:orientation="vertical" >
					 <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip">

                    <Button
						android:id="@+id/btn_up_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="22dip"
                        android:layout_centerVertical="true"
                        android:text="上一页"/>

                    <Button
						android:id="@+id/btn_next_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#15a015"
                        android:textSize="22dip"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="下一页"/>

                </RelativeLayout>
					<!--<RelativeLayout
	                    android:layout_width="match_parent"
		            	android:layout_height="50dip"
		            	android:layout_marginLeft="10dip"
		            	android:layout_marginRight="10dip">
	                    
	                    <TextView 
		                    android:layout_width="wrap_content"
			            	android:layout_height="wrap_content"
			            	android:textColor="#000"
			            	android:textSize="22dip"
			            	android:layout_centerVertical="true"
			            	android:text="总计支出"/>
	                    
	                    <TextView 
		                    android:layout_width="wrap_content"
			            	android:layout_height="wrap_content"
			            	android:textColor="#15a015"
			            	android:textSize="22dip"
			            	android:layout_centerVertical="true"
			            	android:layout_alignParentRight="true"
			            	android:text="600"/>
	                    
	                </RelativeLayout>-->
	                <ImageView 
	                    android:layout_width="match_parent"
		            	android:layout_height="5dip"
		            	android:background="#fff"/>
	                
	                <LinearLayout 
	                    android:layout_width="match_parent"
		            	android:layout_height="50dip"
		            	android:orientation="horizontal">
	                    <TextView 
		                    android:layout_width="fill_parent"
			            	android:layout_height="fill_parent"
			            	android:layout_weight="1.2"
			            	android:gravity="center"
			            	android:textColor="#555"
			            	android:textSize="22dip"
			            	android:text="日期"/>
	                    <TextView 
		                    android:layout_width="fill_parent"
			            	android:layout_height="fill_parent"
			            	android:layout_weight="1"
			            	android:gravity="center"
			            	android:textColor="#555"
			            	android:textSize="22dip"
			            	android:text="物品名称"/>
	                    <TextView 
		                    android:layout_width="fill_parent"
			            	android:layout_height="fill_parent"
			            	android:layout_weight="1.3"
			            	android:gravity="center"
			            	android:textColor="#555"
			            	android:textSize="22dip"
			            	android:text="物品数量"/>
	                    <TextView 
		                    android:layout_width="fill_parent"
			            	android:layout_height="fill_parent"
			            	android:layout_weight="1.3"
			            	android:gravity="center"
			            	android:textColor="#555"
			            	android:textSize="22dip"
			            	android:text="零售价"/>
	                </LinearLayout>
		            <ListView 
		                android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:divider="#fff"
			            android:dividerHeight="0dip"
			            android:id="@+id/zclist"/>
		            
		        </LinearLayout>
	            
	        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_image" >

        <ImageView
            android:id="@+id/home_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_style" />

        <ImageView
            android:id="@+id/return_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/return_style" />
    </RelativeLayout>

</LinearLayout>