<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#3680cd"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="主页   > 购物车"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/yg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="已选购的物品"
            android:textColor="#8B3E2F"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/now_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_toRightOf="@+id/yg"
            android:text="已购买XXXX元"
            android:textColor="#8B3E2F"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/yg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:gravity="right"
            android:text="删除商品"
            android:textColor="#8B3E2F"
            android:textSize="30sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5dip"
                android:layout_alignParentBottom="true"
                android:background="@drawable/cwzk_x"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
             >

        </android.support.v7.widget.RecyclerView>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="200sp"
            android:text="提交订单"
            android:background="#3680cd"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#000000">

            <ImageView
                android:id="@+id/home_but"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/home_page_style" />

            <ImageView
                android:id="@+id/return_but"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/return_style" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
