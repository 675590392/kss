<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ej_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#3680cd"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="主页   >接济单"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_jjd_all"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/text_room"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="监室号："
                android:textSize="20dp"
                android:textColor="#555"
                android:gravity="center"
                android:layout_marginRight="10dp"

                />
            <TextView
                android:id="@+id/edt_prison_num"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="22sp"
                android:text="人员编号："
                android:textColor="#555"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                ></TextView>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dip"
                android:text="在押人员所需物品"
                android:textSize="40dip"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_jjd_line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/cwzk_x"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/lin_jjd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <GridView
                android:id="@+id/gview_jjd"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:numColumns="auto_fit"
                android:divider="#555"
                android:dividerHeight="1dip"
                android:columnWidth="220dp"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:layout_marginBottom="20dp"
                ></GridView>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_jjd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <LinearLayout
                android:id="@+id/lin_jjd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView
                android:id="@+id/text_rmb"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="人民币"
                android:textSize="20dp"
                android:textColor="#555"
                android:gravity="right"
                android:layout_margin="2dp"
                />
            <EditText
                android:id="@+id/edt_rmb_num"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textColor="@color/darkgray"
                android:textSize="22sp"
                android:inputType="number"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                ></EditText>
            <TextView
                android:id="@+id/text_rmb_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="22dp"
                android:textColor="#555"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_jjd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_famali_name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="家属名称："
                    android:textSize="20dp"
                    android:textColor="#555"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
                <EditText
                    android:id="@+id/edt_famali_name"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textColor="@color/darkgray"
                    android:textSize="22sp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    ></EditText>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_jjd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textSize="20dp"
                    android:textColor="#555"
                    android:gravity="right"
                    android:layout_margin="2dp"
                    />
                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:textColor="@color/darkgray"
                    android:textSize="22sp"
                    android:inputType="number"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    ></EditText>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="40dp"
                    >
                    <Button
                        android:id="@+id/btn_jjd_submit"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/submit"
                        android:textSize="22dp"
                        android:text=""
                        android:layout_alignParentBottom="true"
                        />
                </LinearLayout>
              <!--  <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/btn_jjd_submit"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/submit"
                        android:textSize="22dp"
                        android:layout_alignParentBottom="true"
                       />
                </RelativeLayout-->>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_image" >

        <ImageView
            android:id="@+id/home_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_style" />

        <ImageView
            android:id="@+id/return_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/return_style" />
    </RelativeLayout>

</LinearLayout>