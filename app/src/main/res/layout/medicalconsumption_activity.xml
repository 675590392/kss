<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ej_back"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#3680cd"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="主页   > 就诊消费"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal" >

       <!--  <ImageView
            android:layout_width="match_parent"
        	android:layout_height="fill_parent"
        	android:background="@drawable/index_login_b"
        	android:id="@+id/zwdl"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dip"
            android:orientation="vertical" >

            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="30dip"
	            android:gravity="center_vertical"
	            android:orientation="horizontal" >
				
                <TextView
					android:id="@+id/text_name"
                    android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:textColor="#000"
	            	android:textSize="22dip"
	            	android:text="姓名:XX"/>
                <TextView
					android:id="@+id/text_bh"
                    android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="10dip"
	            	android:textColor="#000"
	            	android:textSize="22dip"
	            	android:text="编号:23567823"/>
	            
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:background="#dfe8f3"
	            android:layout_marginTop="1dip"
	            android:orientation="vertical" >
             
	            <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="20dip" >
		            <ImageView
		                android:layout_width="fill_parent"
		            	android:layout_height="3dip"
		            	android:layout_alignParentBottom="true"
		            	android:background="@drawable/cwzk_x"/>
		        </RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dip"
					android:layout_marginTop="20dp"
					android:layout_marginLeft="10dip"
					android:layout_marginRight="10dip">

					<Button
						android:id="@+id/btn_up_page"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000"
						android:textSize="22dip"
						android:layout_centerVertical="true"
						android:text="上一页"/>

					<Button
						android:id="@+id/btn_next_page"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#15a015"
						android:textSize="22dip"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:text="下一页"/>
				</RelativeLayout>
	            <LinearLayout
	                android:layout_width="match_parent"
	            	android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
	            	android:orientation="vertical"
	            	android:background="#fff">
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="50dip"
						android:orientation="horizontal">
						<TextView
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1.4"
							android:gravity="center"
							android:textColor="#555"
							android:textSize="22dip"
							android:id="@+id/time"
							android:text="诊断日期"/>
						<TextView
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1.3"
							android:gravity="center"
							android:textColor="#555"
							android:textSize="22dip"
							android:id="@+id/name"
							android:text="诊断病情"/>
						<TextView
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1.5"
							android:gravity="center"
							android:textColor="#555"
							android:textSize="22dip"
							android:id="@+id/hospital"
							android:text="诊断医生"/>
						<TextView
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1.1"
							android:gravity="center"
							android:textColor="#555"
							android:id="@+id/backTo"
							android:textSize="22dip"
							android:text="诊断措施"/>
						<!--	<CheckBox
                                android:id="@+id/cbCheckBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"
                                android:gravity="center"
                                android:layout_marginLeft="50dip"
                                android:button="@drawable/chekbox_checked_style"
                                android:focusable="false"
                                android:visibility="visible"/>-->
						<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1.4"
							android:gravity="center"
							android:orientation="horizontal" >
						<TextView
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:textColor="#555"
							android:textSize="22dip"
							android:text="就医确认"/>
						<Button
							android:id="@+id/btn_all_select"
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="2"
							android:gravity="center"
							android:text="全选"
							android:textColor="#555"
							android:textSize="18dip"
						/>
						</LinearLayout>
					</LinearLayout>
		            <ListView
		                android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:divider="#fff"
			            android:dividerHeight="0dip"
			            android:id="@+id/jzlist"/>

		         </LinearLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal"
					android:orientation="horizontal" >
					<Button
						android:id="@+id/btn_medical_submit"
						android:layout_width="130dp"
						android:layout_height="60dp"
						android:layout_gravity="center"
						android:textSize="22dp"
						android:layout_alignParentBottom="true"
						android:text="提交"/>
				</RelativeLayout>

	        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_image" >

        <ImageView
            android:id="@+id/home_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_style" />

        <ImageView
            android:id="@+id/return_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/return_style" />
    </RelativeLayout>

</LinearLayout>