                        android:background="@drawable/lan_x"/>

                </LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

