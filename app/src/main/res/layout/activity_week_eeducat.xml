<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ej_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3680cd"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="主页   > 每周教育"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:text="每周教育"
            android:textSize="40dip"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"/>
    </RelativeLayout>
    <View
        android:layout_below="@+id/pw"
        android:id="@+id/view_pw_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/cwzk_x"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:background="#FFDAB9"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1.0" >

                <TextView
                    style="@style/eduzt"
                    android:id="@+id/tdate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="周一~周日"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time1"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7:00-8:00"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time2"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8:00-9:00"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time3"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9:15-9:30"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time4"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9:30-10:15"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time5"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10:15-12:00"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time6"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="14:00-14:15"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time7"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="14:15-15:00"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time8"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="15:00-15:15"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/time9"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="15:15-15:45"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/timea"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="15:45-19:00"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/timeb"
                    style="@style/eduzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="19:00-21:30"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#cbd0d4" >
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cbd0d4" >
        </View>
        <ListView
            android:id="@+id/mzjy_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"
            android:scrollbars="none"
            >
        </ListView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cbd0d4" >
        </View>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_image" >

        <ImageView
            android:id="@+id/home_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_style" />

        <ImageView
            android:id="@+id/return_but"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/return_style" />
    </RelativeLayout>

</LinearLayout>